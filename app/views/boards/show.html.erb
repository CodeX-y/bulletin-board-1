<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

    <hr>

  </div>
</div>

<hr>

<h2>Add a new post</h2>

<form action="/insert_post" method="post">
  <div>
    <label for="text_field">Title</label>
    <input id = "text_field" type="text" name="title">
  </div>

  <div>
    <label for="body_field">Body</label>
    <textarea name="body" id = "body_field" cols="20" rows="5"></textarea>
  </div>

  <div>
    <label for="expires_on_field">Expires on</label>
    <input id = "expires_on_field" type="date" name="expires_on">
  </div>

  <div>
    <label for="board_id_field">Board ID</label>
    <input id="board_id_field" type="hidden" name="query_board_id" value="<%= @the_board.id%>"></input>
  </div>

  <button type="submit">
    Add post
  </button>
</form>

<h2>Active posts</h2>

<%matching_posts = Post.where(:board_id => @the_board.id).order(:expires_on => :asc)%>


<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>
  
  <% matching_posts.each do |a_post|%>
  <tr>
    <td><%= a_post.title%></td>
    <td><%= a_post.body%></td>
    <td><%= a_post.created_at.strftime("%b, %e, %y")%></td>
    <td><%= a_post.expires_on.strftime("%b, %e, %y")%></td>
  </tr>
  <%end%>
</table>
